@model Producto3.Models.productos
@{
    ViewBag.Title = "AltaProducto";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Alta de Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2>Para dar de alta un nuevo producto ingresa los siguientes campos</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="nombreProducto" class="form-label">Nombre del producto:</label>
                <input type="text" class="form-control" id="nombreProducto" name="nombre" value="@Model.nombre">
            </div>
            <div class="mb-3">
                <label for="descripcionProducto" class="form-label">Descripción del producto:</label>
                <input type="text" class="form-control" id="descripcionProducto" name="descripcion" value="@Model.descripcion">
            </div>
            <div class="mb-3">
                <label for="precioProducto" class="form-label">Precio:</label>
                <input type="text" class="form-control" id="precioProducto" name="precio" value="@Model.precio">
            </div>
            <div class="mb-3">
                <label for="imagenProducto" class="form-label">Imagen:</label>
                <input type="text" class="form-control" id="imagenProducto" name="imagen" value="@Model.imagen">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
