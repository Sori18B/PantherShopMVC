
@{
    @model Producto3.Models.usuarios
    ViewBag.Title = "RegistroAdmin";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container-fluid bg-light">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/img/Reg2.jpg")" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="background-color:black;">Registra una cuenta de administrador para continuar</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/img/Reg1.png")" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="background-color:black;">Registra una cuenta de administrador para continuar :)</h5>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header text-center">
                    <h3>Panther Shop</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Bienvenido!</h5>
                    <h5 class="card-title text-center">Ingresa tus datos para crear una cuenta de administrador</h5>

                    @using (Html.BeginForm())
                    {
                        <div class="mb-3">
                            @Html.LabelFor(model => model.nomCompleto, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.nomCompleto, new { @class = "form-control", placeholder = "Ingrese su nombre completo" })
                            @Html.ValidationMessageFor(model => model.nomCompleto, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(model => model.correo, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.correo, new { @class = "form-control", placeholder = "Ingrese un correo electrónico" })
                            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(model => model.contra, new { @class = "form-label" })
                            @Html.PasswordFor(model => model.contra, new { @class = "form-control", placeholder = "Ingrese una contraseña" })
                            @Html.ValidationMessageFor(model => model.contra, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3 text-center">
                            @Html.Label("rol", "Seleccione un rol:", new { @class = "form-label" })
                            @Html.DropDownList("rol", new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Comprador", Value = "Comprador" },
                                new SelectListItem { Text = "Administrador", Value = "Administrador" }
                            }, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark">Registrarse</button>

                    }


                </div>
            </div>
        </div>
    </div>
</div>

